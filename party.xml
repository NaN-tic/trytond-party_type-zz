<tryton>
    <data>
        <!-- Views -->
        <record model="ir.ui.view" id="party_view_tree">
            <field name="model">party.party</field>
            <field name="type">tree</field>
            <field name="inherit" ref="party.party_view_tree"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                <xpath expr="/tree/field[@name='name']"
                        position="before">
                    <field name="party_type" select="1"/>
                </xpath>
                <xpath expr="/tree/field[@name='name']"
                        position="after">
                    <field name="first_name" select="1"/>
                    <field name="gender" select="2"/>
                </xpath>
                </data>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="party_view_form">
            <field name="model">party.party</field>
            <field name="inherit" ref="party.party_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                <xpath expr="/form/field[@name='name']"
                        position="replace">
                </xpath>
                <xpath expr="/form/label[@name='name']"
                        position="replace">
                    <label name="party_type"/>
                    <field name="party_type"/>
                </xpath>
                <xpath expr="/form/field[@name='active']"
                        position="after">
                    <label name="name"/>
                    <field name="name"/>
                    <label name="first_name"/>
                    <field name="first_name"/>
                    <label name="gender"/>
                    <field name="gender"/>
                </xpath>
                </data>
                ]]>
            </field>
        </record>
        <!-- Menu actions and Menu entrys -->
        <record model="ir.action.act_window" id="act_organization_form">
            <field name="name">Parties: Organizations</field>
            <field name="res_model">party.party</field>
            <field name="view_type">form</field>
            <field name="domain">[('party_type', '=', 'organization')]</field>
        </record>
        <record model="ir.action.act_window.view" id="act_organization_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="party_view_tree"/>
            <field name="act_window" ref="act_organization_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_organization_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="party_view_form"/>
            <field name="act_window" ref="act_organization_form"/>
        </record>

        <menuitem name="Organizations" parent="party.menu_party_form"
                sequence="10" action="act_organization_form"
                id="menu_organization_form"/>
        <record model="ir.action.act_window" id="act_person_form">
            <field name="name">Parties: Persons</field>
            <field name="res_model">party.party</field>
            <field name="view_type">form</field>
            <field name="domain">[('party_type', '=', 'person')]</field>
            <field name="context">{'party_type': 'person'}</field>
        </record>
        <record model="ir.action.act_window.view" id="act_person_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="party_view_tree"/>
            <field name="act_window" ref="act_person_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_person_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="party_view_form"/>
            <field name="act_window" ref="act_person_form"/>
        </record>
        <menuitem name="Persons" parent="party.menu_party_form"
                sequence="15" action="act_person_form"
                id="menu_person_form"/>
    </data>
</tryton>
