<tryton>
    <data>
        <!-- Menu actions and Menu entrys -->
        <record model="ir.action.act_window" id="act_organization_form">
            <field name="name">Organizations</field>
            <field name="res_model">party.party</field>
            <field name="view_type">form</field>
            <field name="domain">[('type', '=', 'organization')]</field>
        </record>
        <menuitem name="Organizations" parent="party.menu_party_form" 
                sequence="10" action="act_organization_form" 
                id="menu_organization_form"/>
        <record model="ir.action.act_window" id="act_person_form">
            <field name="name">Persons</field>
            <field name="res_model">party.party</field>
            <field name="view_type">form</field>
            <field name="domain">[('type', '=', 'person')]</field>
        </record>
        <menuitem name="Persons" parent="party.menu_party_form" 
                sequence="10" action="act_person_form" 
                id="menu_person_form"/>
        <!-- Properties -->
        <record model="ir.property" id="property_party_name_order">
            <field name="name">name_order</field>
            <field name="field"
                    search="[('model.model', '=', 'party.party'), 
                    ('name', '=', 'name_order')]"/>
            <field name="value">,last_first</field>
        </record>

        <!-- Views -->
        <record model="ir.ui.view" id="party_view_form_extended">
            <field name="model">party.party</field>
            <field name="inherit" ref="party.party_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                <xpath expr="/form/field[@name=&quot;active&quot;]"
                        position="replace"/>
                <xpath expr="/form/label[@name=&quot;active&quot;]"
                        position="replace"/>
                <xpath expr="/form/field[@name=&quot;name&quot;]"
                        position="replace"/>
                <xpath expr="/form/label[@name=&quot;name&quot;]"
                        position="replace"/>
                <xpath expr="/form/field[@name=&quot;code&quot;]"
                        position="replace"/>
                <xpath expr="/form/label[@name=&quot;code&quot;]"
                        position="replace"/>
                <xpath expr="/form/notebook" position="before">
                    <group col="8" colspan="6">
                        <label name="type"/>
                        <field name="type"/>
                        <group col="2" colspan="2">
                            <label name="name"/>
                            <field name="name"/>
                            <label name="complete_person_name"/>
                            <field name="complete_person_name"/>
                        </group>
                        <label name="code"/>
                        <field name="code"/>
                        <label name="active"/>
                        <field name="active"/>
                        <!-- Person Entity -->
                        <label name="person_first_name"/>
                        <field name="person_first_name"/>
                        <label name="person_last_name"/>
                        <field name="person_last_name"/>
                        <label name="name_order"/>
                        <field name="name_order"/>
                        <label name="person_gender"/>
                        <field name="person_gender"/>
                    </group>
                </xpath>
                </data>
                ]]>
            </field>
        </record>
    </data>
</tryton>
